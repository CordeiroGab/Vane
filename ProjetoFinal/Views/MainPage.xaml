<Page x:Class="ProjetoFinal.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ProjetoFinal"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Loaded="OnLoaded">

    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/ArquivoJogo/fundo.jpg"
                    Stretch="UniformToFill"/>
    </Page.Background>

    <Canvas x:Name="GameSpace"
            KeyDown="Espaco_KeyDown"
            KeyUp="Espaco_KeyUp"
            IsTabStop="true">

        <!-- A Nave do Jogador foi removida daqui e agora Ã© criada no Player.cs -->

        <TextBlock Text="{x:Bind ViewModel.PlacarFormatado, Mode=OneWay}"
                   FontSize="24"
                   Foreground="#FFFFFFFF"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20"/>
    </Canvas>
</Page>
